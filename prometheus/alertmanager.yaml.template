global:
  resolve_timeout: 1m

receivers:
  - name: pushover
    pushover_configs:
      - user_key: '${PUSHOVER_USER_KEY}'
        token: '${PUSHOVER_API_TOKEN}'
        title: 'Subgraph Alert'
        message: '{{ .CommonAnnotations.summary }}'

route:
  receiver: pushover
  group_wait: 10s
  group_interval: 30s
  repeat_interval: 1h
